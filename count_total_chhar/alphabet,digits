#include <stdio.h>

int countChars(const char* s) {
    int n = 0;
    while (s[n] != '\0') ++n;
    return n;
}

int main(void) {
    char s[1001];
    if (fgets(s, sizeof(s), stdin)) {
        for (char* p = s; *p; ++p) {
            if (*p == '\n') { *p = '\0'; break; }
        }
        printf("%d\n", countChars(s));
    }
    return 0;
}
